<h2><%= @@result_hash["Title"] %></h2>

<div class="left">
  <img src="<%= @@result_hash["Poster"] %>" alt="">
  <form action="/movies" method="post">
      <button>Add to Database</button>
  </form>
</div>

<div class="right">
  <p>Title: <%= @@result_hash["Title"] %></p>
  <p>Year: <%= @@result_hash["Year"] %></p>
  <p>Genre: <%= @@result_hash["Genre"] %></p>
  <p>Date Released: <%= @@result_hash["Released"] %></p>
  <p>Duration: <%= @@result_hash["Runtime"] %></p>
  <p>Director: <%= @@result_hash["Director"] %></p>
  <p>Actors: <%= @@result_hash["Actors"] %></p>
  <p>Language: <%= @@result_hash["Language"] %></p>
  <p>Description: <%= @@result_hash["Plot"] %></p>
  <br>
  <p>imdb Ratings: <span><%= @@result_hash["imdbRating"] %></span></p>
</div>


